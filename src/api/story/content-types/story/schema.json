      "target": "api::family.family",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": ""
            },
            ""
          ]
        }
      }
    },
    "mediaFiles": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "timePeriod": {
      "type": "string"
    }
  }
